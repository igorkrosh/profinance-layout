include modal.pug

mixin IncludeCSS(filename)
    - let path = `assets/css/${filename}`
    link(rel="stylesheet", href=path)

mixin IncludeJS(filename)
    - let path = `assets/js/${filename}`
    script(src=path)

mixin InputRadio(name, label, value)
    label.radio= label
        input(type="radio" name=name value=value)
        span.checkmark

mixin BtnMenu()
    button.btn__menu
        span